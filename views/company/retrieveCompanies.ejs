<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Companies</title>
</head>
<body>
    <h1>List of Companies</h1>
    <ul>
        <% companies.forEach(company => { %>
            <li>
               Company ID: <%= company.id %> <br>Company Name:<%= company.company_name %> <br> Company Description: <%= company.company_description %> <br> Company Details:  <%= company.company_details %>
              
               <form action="/company/<%= company.id %>" method="GET">
                <button type="submit">Fetch Persons</button>
            </form>
                <!-- Update Button -->
                <form action="/update-company/<%= company.id %>" method="GET">
                    <button type="submit">Update</button>
                </form>
                <!-- Delete Button -->
                <form action="/delete-company/<%= company.id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
