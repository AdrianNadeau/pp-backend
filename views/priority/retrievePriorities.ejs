<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Priorities</title>
</head>
<body>
    <h1>List of Priorities</h1>
    <ol>
        <% priorities.forEach(priority => { %>
            <li>
                <strong>Name:</strong> <%= priority.name %> <br>
                <strong>Description:</strong> <%= priority.description %> <br>
                <!-- Update Button -->
                <form action="/update-priority/<%= priority.id %>" method="GET">
                    <button type="submit">Update</button>
                </form>
                <!-- Delete Button -->
                <form action="/delete-priority/<%= priority.id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ol>
</body>
</html>
